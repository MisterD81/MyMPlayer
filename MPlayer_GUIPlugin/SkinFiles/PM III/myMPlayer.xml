					<image>video-focus.png</image>
				</control>
				<control>
					<description>Filmstrip view</description>

					<type>filmstrip</type>

					<id>50</id>

					<onleft>2</onleft>

					<onright>2</onright>

					<onup>2</onup>

					<ondown>2</ondown>
