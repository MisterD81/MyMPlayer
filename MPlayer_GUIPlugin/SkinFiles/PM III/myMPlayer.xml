			<posY>125</posY>

			<control>
				<description>View-As button</description>

				<type>button</type>

				<id>2</id>

				<label>100</label>

				<onup>17</onup>

				<onright>50</onright>

				<textXOff>17</textXOff>

				<alignY>center</alignY>
			</control>

			<control>
				<type>sortbutton</type>

				<id>3</id>

